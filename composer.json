    "require": {
        "php": ">=5.6",
        "slim/slim": "^3.5.0",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.21.0",
        "linecorp/line-bot-sdk": "1.1.0"
    },
    "autoload": {
        "psr-4": {
